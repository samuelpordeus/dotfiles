#!/bin/bash
# Usage: update-pkg $PACKAGE

set -e
if [ $# -lt 1 ]
then
  echo "Usage: $(basename $0) PACKAGES..."
  exit 1
fi

__update_dependency__() {
  echo -e "ðŸ“¦  \033[00mUpdating \033[0;31m$1\033[00m dependency..."

  mix deps.update $1
  mix test

  if [ $? -eq 0 ]; then
    __commit__ $1
  else
    __fail__ $1
  fi
}

__fail__() {
  echo -e "ðŸ’£  \033[00mthe test suite fails after 'mix deps.update $1' \033[0;31m"
  git checkout mix*
  mix hex.outdated
  exit 1
}

__commit__() {
  git add mix*
  git commit -m "Update \`$1\` dependency :package:"
  mix hex.outdated
}

for pkg in "$@"; do
  __update_dependency__ $pkg
done
